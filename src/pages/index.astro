<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>La Velada del Año III</title>
  </head>
  <body>
    <header class="relative">
      <div
        class="absolute left-1/2 -translate-x-1/2 flex flex-col gap-1 justify-center items-center top-8"
      >
        <img
          class="w-32 lg:w-64 h-auto"
          src="/lavelada-logo.webp"
          alt="Logo La Velada del Año III"
        />

        <h1 class="text-3xl uppercase text-center text-white font-bold">
          La Velada del Año III
        </h1>
      </div>
    </header>

    <main>
      <section
        id="boxers"
        class={`
          flex justify-between relative
          [&>div>img]:absolute [&>div>img]:bottom-0 [&>div>img]:w-auto
			 	  [&>div>img]:animate-ease-in-out [&>div>img]:animate-duration-700
				  h-[40vh] md:h-[65vh] lg:h-screen pt-4 lg:pt-24 border-b border-white/10 overflow-hidden
        `}
      >
        <div class="relative w-full">
          <img class="left-0 h-full z-50" src="/boxers/coscu.png" alt="Coscu" />
          <img
            class="left-[5%] h-[80%] z-40 animate-fade-right"
            src="/boxers/mayichi.png"
            alt="Mayichi"
          />
          <img
            class="left-[15%] h-[75%] z-30 animate-fade-right animate-delay-300"
            src="/boxers/viruzz.png"
            alt="Viruzz"
          />
          <img
            class="left-[30%] h-[70%] z-20 animate-fade-right animate-delay-500"
            src="/boxers/fernanfloo.png"
            alt="Fernanfloo"
          />
          <img
            class="left-[45%] h-[68%] z-10 animate-fade-right animate-delay-700"
            src="/boxers/larivers.png"
            alt="La Rivers"
          />
          <img
            class="left-[50%] h-[63%] z-0 animate-fade-right animate-delay-1000"
            src="/boxers/papigavi.png"
            alt="Papigavi"
          />
        </div>

        <div class="relative w-full">
          <img
            class="right-0 h-full z-50"
            src="/boxers/german.png"
            alt="German"
          />
          <img
            class="right-[5%] h-[80%] z-40 animate-fade-left"
            src="/boxers/amouranth.png"
            alt="Amouranth"
          />
          <img
            class="right-[15%] h-[75%] z-30 animate-fade-left animate-delay-300"
            src="/boxers/shelao.png"
            alt="Shelao"
          />
          <img
            class="right-[30%] h-[70%] z-20 animate-fade-left animate-delay-500"
            src="/boxers/luzu.png"
            alt="Luzu"
          />
          <img
            class="right-[42%] h-[66%] z-10 animate-fade-left animate-delay-700"
            src="/boxers/rivers.png"
            alt="Rivers"
          />
          <img
            class="right-[50%] h-[63%] z-0 animate-fade-left animate-delay-1000"
            src="/boxers/ampeter.png"
            alt="Ampeter"
          />
        </div>
      </section>
    </main>

    <footer></footer>
  </body>
</html>

<style is:global>
  body {
    background: #131313;
  }
</style>
