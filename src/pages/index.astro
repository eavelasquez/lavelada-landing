<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>La Velada del Año III</title>
  </head>
  <body>
    <header class="relative">
      <div
        class="md:absolute md:left-1/2 md:-translate-x-1/2 md:mt-0 md:top-8 flex flex-col gap-1 justify-center items-center mt-4 z-10"
      >
        <img
          class="w-32 lg:w-64 h-auto"
          src="/lavelada-logo.webp"
          alt="Logo La Velada del Año III"
          width="385"
          height="412"
        />

        <h1
          class="font-boxing text-3xl lg:text-5xl text-center text-white font-bold"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-b from-white via-gray-300 to-white inline-block leading-relaxed"
          >
            la velada del año
          </span>
          <span class="text-yellow-300">III</span>
        </h1>
      </div>
    </header>

    <main>
      <section
        id="boxers"
        class={`
          flex justify-between relative
          [&>div>img]:absolute [&>div>img]:bottom-0 [&>div>img]:w-auto
			 	  [&>div>img]:animate-ease-in-out [&>div>img]:animate-duration-700
				  h-[40vh] md:h-[65vh] lg:h-screen pt-4 lg:pt-24 border-b border-white/10 overflow-hidden
        `}
      >
        <div
          class="bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#131824] via-zinc-900 to-zinc-950 h-full w-full inset-0 absolute"
        >
        </div>

        <div class="relative w-full">
          <img class="left-0 h-full z-50" src="/boxers/coscu.png" alt="Coscu" />
          <img
            class="left-[5%] h-[80%] z-40 animate-fade-right"
            src="/boxers/mayichi.png"
            alt="Mayichi"
          />
          <img
            class="left-[15%] h-[75%] z-30 animate-fade-right animate-delay-300"
            src="/boxers/viruzz.png"
            alt="Viruzz"
          />
          <img
            class="left-[30%] h-[70%] z-20 animate-fade-right animate-delay-500"
            src="/boxers/fernanfloo.png"
            alt="Fernanfloo"
          />
          <img
            class="left-[45%] h-[68%] z-10 animate-fade-right animate-delay-700"
            src="/boxers/larivers.png"
            alt="La Rivers"
          />
          <img
            class="left-[50%] h-[63%] z-0 animate-fade-right animate-delay-1000"
            src="/boxers/papigavi.png"
            alt="Papigavi"
          />
        </div>

        <div class="relative w-full">
          <img
            class="right-0 h-full z-50"
            src="/boxers/german.png"
            alt="German"
          />
          <img
            class="right-[5%] h-[80%] z-40 animate-fade-left"
            src="/boxers/amouranth.png"
            alt="Amouranth"
          />
          <img
            class="right-[15%] h-[75%] z-30 animate-fade-left animate-delay-300"
            src="/boxers/shelao.png"
            alt="Shelao"
          />
          <img
            class="right-[30%] h-[70%] z-20 animate-fade-left animate-delay-500"
            src="/boxers/luzu.png"
            alt="Luzu"
          />
          <img
            class="right-[42%] h-[66%] z-10 animate-fade-left animate-delay-700"
            src="/boxers/rivers.png"
            alt="Rivers"
          />
          <img
            class="right-[50%] h-[63%] z-0 animate-fade-left animate-delay-1000"
            src="/boxers/ampeter.png"
            alt="Ampeter"
          />
        </div>
      </section>

      <div
        id="info"
        class="block lg:absolute lg:bottom-48 z-50 mx-auto lg:left-1/2 lg:-translate-x-1/2"
      >
        <div class="flex flex-col">
          <div class="px-5 pt-4 pb-2 bg-white text-black text-center">
            <h2 class="font-boxing text-7xl">1 de JULIO</h2>
          </div>

          <div class="px-5 pt-4 pb-1 bg-black text-white text-center">
            <a
              class="font-boxing text-[46px] hover:contrast-150 hover:scale-105 transition inline-block"
              href="https://twitch.tv/ibai"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="text-white">twitch.tv/</span><span
                class="text-yellow-300"
              >
                ibai
              </span>
            </a>
          </div>

          <div class="px-5 pt-2 pb-1 bg-sky-600 text-black text-center">
            <a
              class="hover:contrast-150 hover:scale-105 transition font-boxing text-4xl inline-block text-white"
              href="https://www.entradas.com/artist/la-velada-del-ano/?affiliate=LVL"
              target="_blank"
              rel="noopener noreferrer"
            >
              Comprar entradas
            </a>
          </div>
        </div>
      </div>
    </main>

    <footer></footer>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Boxing';
    font-weight: bold;
    src: url('/fonts/boxing.woff2');
  }

  @font-face {
    font-family: 'Boxing Striped';
    font-weight: bold;
    src: url('/fonts/boxing-striped.woff2');
  }

  body {
    background: #131313;
  }
</style>
